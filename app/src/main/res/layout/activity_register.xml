<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC1674"
    tools:context=".Register">

     <ImageView
        android:id="@+id/imageView_reg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:srcCompat="@drawable/orangedrop"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrapper_reg"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageView_reg">

        <TextView
            android:id="@+id/textview_reg_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/scris_alb"
            android:text="REGISTER"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/scris_alb"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_reg_reg"
            android:text="First Name"
            android:id="@+id/textview_reg_fname">
        </TextView>

        <EditText
            android:id="@+id/editText_fname"
            android:textColor="@color/scris_alb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            app:layout_constraintTop_toBottomOf="@+id/textview_reg_fname"
            android:inputType="textPersonName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:textColor="@color/scris_alb"
            android:text="Last Name"
            android:id="@+id/textview_reg_lastname"
            app:layout_constraintTop_toBottomOf="@id/editText_fname">
        </TextView>

        <EditText
            android:id="@+id/editText_lname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/scris_alb"
            android:ems="12"
            app:layout_constraintTop_toBottomOf="@id/textview_reg_lastname"
            android:inputType="textPersonName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/scris_alb"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_lname1"
            android:text="Email"
            android:id="@+id/textview_reg_email">
        </TextView>

        <EditText
            android:id="@+id/editText_reglogin"
            android:textColor="@color/scris_alb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            app:layout_constraintTop_toBottomOf="@+id/textview_reg_email"
            android:inputType="textEmailAddress" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:textColor="@color/scris_alb"
            android:text="Password"
            android:id="@+id/textview_reg_pw"
            app:layout_constraintTop_toBottomOf="@id/editText_reglogin">
        </TextView>

        <EditText
            android:id="@+id/editText_login_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/scris_alb"
            android:ems="12"
            app:layout_constraintTop_toBottomOf="@id/textview_reg_pw"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/culoare_btn_reg"

            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/editText_login_pw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/scris_alb"
            android:text=" CREATE ACCOUNT " />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_btn_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="60dp"
        android:background="#4A4983"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@id/wrapper_reg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>